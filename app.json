{
  "name": "ShapeShift",
  "version": "3.6.3",
  "displayName": "ShapeShift",
  "icon": "./src/static/icon.png",
  "scheme": "shapeshift",
  "newArchEnabled": true,
  "primaryColor": "#181C27",
  "backgroundColor": "#181C27",
  "plugins": [
    [
      "expo-camera",
      {
        "cameraPermission": "Allow ShapeShift to access your camera to scan QR codes for addresses.",
        "recordAudioAndroid": false
      }
    ],
    "expo-secure-store",
    [
      "expo-splash-screen",
      {
        "image": "./src/static/icon.png",
        "imageWidth": 200,
        "resizeMode": "contain",
        "backgroundColor": "#000b1f"
      }
    ],
    [
      "expo-notifications",
      {
        "icon": "./src/static/icon.png",
        "color": "#181C27",
        "enableBackgroundRemoteNotifications": true
      }
    ],
    [
      "expo-build-properties",
      {
        "android": {
          "targetSdkVersion": 36
        }
      }
    ],
    [
      "@bacons/apple-targets",
      {
        "targets": [
          {
            "type": "widget",
            "name": "widget",
            "directory": "targets/widget",
            "icon": "./src/static/icon.png"
          }
        ]
      }
    ],
    ["./plugins/withCustomGradleProperties"],
    ["./plugins/withWalletConnectScheme"],
    ["./plugins/withWalletQueries"],
    ["./plugins/withAttributionToken"],
    [
      "expo-dev-client",
      {
        "launchMode": "most-recent"
      }
    ]
  ],
  "android": {
    "versionCode": 329,
    "edgeToEdgeEnabled": true,
    "package": "com.shapeshift.droid_shapeshift",
    "adaptiveIcon": {
      "foregroundImage": "./src/static/adaptive-icon.png",
      "backgroundColor": "#181C27"
    },
    "softwareKeyboardLayoutMode": "pan",
    "blockedPermissions": ["android.permission.ACTIVITY_RECOGNITION"],
    "permissions": ["android.permission.CAMERA"]
  },
  "ios": {
    "bundleIdentifier": "com.shapeShift.shapeShift",
    "supportsTablet": true,
    "infoPlist": {
      "ITSAppUsesNonExemptEncryption": false,
      "NSCameraUsageDescription": "This app uses the camera to scan QR codes for addresses.",
      "NSSupportsLiveActivities": true,
      "LSApplicationQueriesSchemes": [
        "metamask",
        "trust",
        "zerion",
        "rainbow",
        "ledgerlive",
        "cbwallet",
        "phantom",
        "argent",
        "imtoken",
        "spot",
        "omni",
        "onto",
        "safe",
        "tokenpocket",
        "exodus"
      ]
    },
    "appleTeamId": "7882V35EPB"
  },
  "extra": {
    "eas": {
      "projectId": "5fc55e72-5e61-41f2-be9b-01a77afc388e"
    }
  },
  "owner": "shapeshift_dao",
  "slug": "mobile-app",
  "updates": {
    "url": "https://u.expo.dev/5fc55e72-5e61-41f2-be9b-01a77afc388e"
  },
  "runtimeVersion": "3.6.3"
}
