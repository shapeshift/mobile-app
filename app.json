{
  "name": "ShapeShift",
  "version": "3.4.0",
  "displayName": "ShapeShift",
  "icon": "./src/static/icon.png",
  "scheme": "shapeshift",
  "newArchEnabled": true,
  "primaryColor": "#181C27",
  "backgroundColor": "#181C27",
  "plugins": [
    "expo-secure-store",
    [
      "expo-splash-screen",
      {
        "image": "./src/static/icon.png",
        "imageWidth": 200,
        "resizeMode": "contain",
        "backgroundColor": "#000b1f"
      }
    ],
    [
      "expo-build-properties",
      {
        "android": {
          "targetSdkVersion": 35
        }
      }
    ],
    ["./plugins/withCustomGradleProperties"]
  ],
  "android": {
    "versionCode": 329,
    "edgeToEdgeEnabled": true,
    "package": "com.shapeshift.droid_shapeshift",
    "adaptiveIcon": {
      "foregroundImage": "./src/static/adaptive-icon.png",
      "backgroundColor": "#181C27"
    },
    "softwareKeyboardLayoutMode": "pan",
    "blockedPermissions": ["android.permission.ACTIVITY_RECOGNITION"],
    "permissions": ["android.permission.CAMERA"]
  },
  "ios": {
    "bundleIdentifier": "com.shapeShift.shapeShift",
    "supportsTablet": true,
    "infoPlist": {
      "ITSAppUsesNonExemptEncryption": false,
      "NSCameraUsageDescription": "This app uses the camera to scan QR codes for addresses."
    }
  },
  "extra": {
    "eas": {
      "projectId": "5fc55e72-5e61-41f2-be9b-01a77afc388e"
    }
  },
  "owner": "shapeshift_dao",
  "slug": "mobile-app",
  "updates": {
    "url": "https://u.expo.dev/5fc55e72-5e61-41f2-be9b-01a77afc388e"
  },
  "runtimeVersion": "3.4.0"
}
